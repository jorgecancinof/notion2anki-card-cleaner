{
  "name": "notion2anki-card-cleaner",
  "version": "1.0.0",
  "description": "This tool cleans your Anki cards of unnecessary HTML code generated by Notion (through Notion2Anki).",
  "main": "index.html",
  "scripts": {
    "start": "npm-run-all --parallel dev-server watch:sass",
    "dev-server": "live-server",
    "watch:sass": "chokidar ./style.scss --command 'sass ./style.scss | postcss --use autoprefixer > ./style.css'",
    "build:css": "sass ./style.scss --style=compressed --quiet | postcss --use autoprefixer --no-map > ./style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jorgecancinof/notion2anki-card-cleaner.git"
  },
  "keywords": [
    "notion2anki",
    "anki",
    "cards",
    "html",
    "code",
    "cleaner"
  ],
  "author": "Jorge Cancino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jorgecancinof/notion2anki-card-cleaner/issues"
  },
  "homepage": "https://github.com/jorgecancinof/notion2anki-card-cleaner#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "chokidar-cli": "^2.1.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.12"
  },
  "browserslist": [
    "defaults"
  ]
}
