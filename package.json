{
  "name": "notion2anki-card-cleaner",
  "version": "1.0.0",
  "description": "This tool cleans your Anki cards of unnecessary HTML code generated by Notion (through Notion2Anki).",
  "main": "index.html",
  "scripts": {
    "start": "npm-run-all --parallel devserver watch",
    "devserver": "live-server",
    "watch": "chokidar ./sass/**/*.scss --command 'sass ./sass/main.scss | postcss --use autoprefixer > ./style.css'",
    "build": "sass ./sass/main.scss --style=compressed --quiet | postcss --use autoprefixer --no-map > ./style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jorgecancinof/notion2anki-card-cleaner.git"
  },
  "keywords": [
    "anki",
    "notion2anki",
    "cards"
  ],
  "author": "Jorge Cancino",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jorgecancinof/notion2anki-card-cleaner/issues"
  },
  "homepage": "https://github.com/jorgecancinof/notion2anki-card-cleaner#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.12"
  },
  "browserslist": [
    "defaults"
  ]
}
